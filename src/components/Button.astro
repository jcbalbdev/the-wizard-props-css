---
export interface Props{
  title: string;
	body: string;
}
const {title,body}=Astro.props;
---
<button class="btn alert p-4 text-left text-blue-950 bg-slate-50 border-2 border-b-4 border-blue-950  rounded-lg focus:bg-slate-300 hover:bg-slate-300 hover:shadow-sm">
  <h1 class="font-bold ">{title}</h1>
  <p>{body}</p>
</button>

